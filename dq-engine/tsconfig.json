// tsconfig.json
{
    "compilerOptions": {
        "target": "ES2020",
        "module": "CommonJS",
        "outDir": "dist",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true, // ⬅️ skip deep type-checking on lib files
        "forceConsistentCasingInFileNames": true // ⬅️ ensure consistent imports
    },
    "include": [
        "src/**/*"
    ]
}